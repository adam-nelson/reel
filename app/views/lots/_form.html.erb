<%= simple_form_for(@lot) do |f| %>
  <%= f.error_notification %>
<div class="row-fluid">
  <div class="form-inputs span4">
   <%= f.input :name %>
   <%= f.input :address %>
   <%= f.input :location %>
   <%= f.input :description %>
   <%= f.file_field :image %>
  </div>
 <div class="form-inputs hero-unit span6" id="bid">
   <%= f.input :bidprice, label: "Bid Price", placholder: 'Enter Bid :' %>
   <%= f.input :resprice, label: 'Reserve Price' %>
</div>


  <div class="form-actions span9">
    <%= f.button :submit %>
  </div>
</div>
<% end %>
